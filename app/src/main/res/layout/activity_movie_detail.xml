<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.youtube.player.YouTubePlayerView
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_view_movie_poster_size"
            android:id="@+id/detail_view_movie_trailer"
            android:background="#88a776" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:id="@+id/detail_view_movie_poster"
            android:layout_marginTop="170dp"
            android:layout_marginLeft="15dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="false"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/detail_view_movie_poster"
            android:layout_below="@+id/detail_view_movie_trailer"
            android:id="@+id/detail_view_title_details_linear_layout"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/detail_view_movie_title" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/detail_view_movie_release" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/detail_view_movie_rating" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/detail_view_movie_popularity" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/detail_view_movie_overview"
            android:textStyle="italic"
            android:layout_below="@+id/detail_view_title_details_linear_layout"
            android:padding="10dp" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detail_view_movie_trailer_list"
            android:layout_below="@+id/detail_view_movie_overview" />

    </RelativeLayout>

</ScrollView>